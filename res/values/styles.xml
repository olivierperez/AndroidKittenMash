<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textSize">30sp</item>
    </style>
    
    <color name="btn_normal_1">#CCCCCC</color>
    <color name="btn_normal_2">#555555</color>
    <color name="btn_normal_border">#000000</color>
    
    <color name="btn_press_1">#555555</color>
    <color name="btn_press_2">#CCCCCC</color>
    <color name="btn_press_border">#000000</color>
    
    <color name="btn_focus_1">#BBBBBB</color>
    <color name="btn_focus_2">#444444</color>
    <color name="btn_focus_border">#660000</color>

</resources>