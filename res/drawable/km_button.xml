<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/btn_press_2" android:startColor="@color/btn_press_1" />

            <stroke android:width="2dp" android:color="@color/btn_press_border" />

            <corners android:radius="5dp" />

            <padding android:bottom="20dp" android:left="10dp" android:right="10dp" android:top="20dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/btn_focus_2" android:startColor="@color/btn_focus_1" />

            <stroke android:width="2dp" android:color="@color/btn_focus_border" />

            <corners android:radius="5dp" />

            <padding android:bottom="20dp" android:left="10dp" android:right="10dp" android:top="20dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/btn_normal_2" android:startColor="@color/btn_normal_1" />
            <corners android:radius="3dp" />

            <stroke android:width="2dp" android:color="@color/btn_normal_border" />

            <padding android:bottom="20dp" android:left="10dp" android:right="10dp" android:top="20dp" />
        </shape></item>

</selector>